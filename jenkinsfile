pipeline {
    agent {
        node {
            label 'docker-python'
        }
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                # make build
	            pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                # make test
	            python3 test.py
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh '''
                # make deploy
	            echo "Mock deploy"
                '''
            }
        }
    }
}
