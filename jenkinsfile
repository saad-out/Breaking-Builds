pipeline {
    agent {
        node {
            label 'docker-python'
        }
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                make build
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                make test
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh '''
                make deploy
                '''
            }
        }
    }
}
