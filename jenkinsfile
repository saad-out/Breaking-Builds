pipeline {
    agent {
        node {
            label 'docker-python'
        }
    }
    triggers {
        pollSCM('*/5 * * * *')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                cd app
	            pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                cd app
	            python3 test.py
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh '''
                cd app
	            echo "Mock deploy"
                '''
            }
        }
    }
}
